datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  id        String     @id @default(cuid())
  lists     WishList[]
  name      String?
  password  String
  roles     String[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
}

model Product {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  list      WishList @relation(fields: [listId], references: [id])
  listId    String
  name      String?
  updatedAt DateTime @updatedAt
  url       String?
}

model WishList {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  name      String
  products  Product[]
  updatedAt DateTime  @updatedAt
  user      User[]
}